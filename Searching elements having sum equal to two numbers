#include <iostream>
using namespace std;
#include <stdio.h>

int SelectionSort(int arr[],int index,int num)
{
    int ind=index;
    int val=arr[index];
    for(int i=index;i<num;i++)
    {
        if(val>arr[i])
        {
            val=arr[i];
            ind=i;
        }
    }
    return ind;
}
void swap(int *a,int *b)
{
    int val=*a;
    *a=*b;
    *b=val;
}

int search(int arr[],int val,int start, int end)
{
    int result=-1;
    if(end%2!=0)
    {
        int x=(end+1)/2;
        if(arr[x]==val)
            result=x;
        else if(arr[x]>val)
            search(arr,val,0,x);
        else
            search(arr,val,x+1,end);
    }
    else
    {
        int x=end/2;
        if(arr[x]==val)
            result=x;
        else if(arr[x]>val)
            search(arr,val,0,x);
        else
            search(arr,val,x+1,end);
    }
    return result;
}

int main() {
    int arr[]={2,7,3,4,9};
    int val=16;
    //first sort the array;
    int first=0;
    int num=sizeof(arr)/sizeof(arr[0]);
    for(int i=0;i<num;i++)
    {
        int index=SelectionSort(arr,i,num);
        swap(&arr[i],&arr[index]);
    }
    int a=0;
    int b=0;
    if(arr[num-1]>val)
    {
        
      for(int i=0;i<num-1;i++)
        {
            int diff=val-arr[i];
            //check if diff present in arry or not
            int x=search(arr,diff,first,num);
            if(x>0)
            {
                a=x;
                b=i;
            }
        }
        
    }
    else
    {
        for(int i=num-1;i>0;i--)
        {
            int diff=val-arr[i];
            int x=search(arr,diff,first,num);
            if(x>0)
            {
                a=x;
                b=i;
            }
        }
    }
    
    //thus the values are arr[a] and arr[b];
    printf("the values are : %d and %d", arr[a],arr[b]);
	// your code goes here
	return 0;
}
